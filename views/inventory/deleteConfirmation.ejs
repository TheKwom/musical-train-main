<% if (title) { %>
<h1><%= title %></h1>
<!-- Message -->
<%- messages() %>

<% } else {
                res.redirect('/')
              } %>

<div class="form-body">
  <section class="form-container">
    <form class="form" id="regForm" action="/inv/delete" method="post">

      <input type="hidden" name="inv_id" value="<%= locals.inv_id %>">

      <label>Make:</label>
      <input class="form-field" placeholder="Make" size="40" type="text" name="inv_make" value="<%= locals.inv_make %>" readonly> <br>

      <label>Model:</label>
      <input class="form-field" placeholder="Model" size="40" type="text" name="inv_model" value="<%= locals.inv_model %>" readonly><br>


      <label>Year:</label>
      <input class="form-field" placeholder="Year" size="40" size="40" type="number" name="inv_year" value="<%= locals.inv_year %>" readonly><br>

      <label>Price:</label>
      <input class="form-field" placeholder="Price" size="40" type="number" name="inv_price" value="<%= locals.inv_price %>" readonly><br>

      <div class="edit-buttons-container">
        <a href="javascript:history.back()">
          <button class="form-button cancel-button" id="historyBack" type="button" name="cancel">Cancel</button>
        </a>
        <button class="form-button" id="submitButton" type="submit" name="submit">Delete</button>
      </div>
      <p>Confirm Deletion - The delete is permanent.</p>
    </form>
  </section>
</div>
<noscript>JavaScript must be enabled to use this page.</noscript>
<script src="../../js/inv-update.js"></script>