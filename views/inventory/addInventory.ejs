<% if (title) { %> <% } else { res.redirect('/') } %> <%- messages() %>

<div>
  <% if (errors) { %>
  <ul>
    <% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
    <% }) %>
  </ul>

  <% } %>
</div>

<h1><%= title %></h1>
<div class="form-body">
  <section class="form-container">
    <form class="form" action="/inv/add-inventory" method="post">
      <label for="classification_id">Classfication:</label>
      <select name="classification_id" id="classification_id" class="form-field">
        <% for (let i = 0; i < classification_name.length; i++) { %>
        <option value="<%= classification_name[i].classification_id %>"><%= classification_name[i].classification_name %></option>
        <% } %>
      </select><br>
      <label for="inv_make">Make:</label>
      <input class="form-field" id="inv_make" required name="inv_make" size="40" placeholder="Make" minlength="3" type="text" value="<%= locals.inv_make %>" /><br>
      <label for="inv_model">Model:</label>
      <input class="form-field" id="inv_model" required name="inv_model" size="40" minlength="3" placeholder="Model" type="text" value="<%=  locals.inv_model  %>" /><br>

      <label for="inv_description">Description:</label>
      <input class="form-field" id="inv_description" required name="inv_description" size="40" placeholder="Description" type="text" value="<%= locals.inv_description  %>" /><br>
      <label for="inv_image">Image Path:</label>
      <input class="form-field" id="inv_image" required name="inv_image" size="40" minlength="3" placeholder="Image Path" type="text" value="<%= locals.inv_image  %>" /><br>
      <label for="inv_thumbnail">inv thumbnall:</label>
      <input class="form-field" id="inv_thumbnail" required name="inv_thumbnail" size="40" minlength="3" placeholder="Image Path" type="text" value="<%= locals.inv_thumbnail  %>" /><br>

      <label for="inv_price">Price:</label>
      <input class="form-field" id="inv_price" required minlength="3" name="inv_price" placeholder="Price" type="number" value="<%= locals.inv_price  %>" /><br>
      <label for="inv_year">Year:</label>
      <input class="form-field" id="inv_year" required name="inv_year" minlength="4" placeholder="Year" type="number" value="<%= locals.inv_year  %>" /><br>
      <label for="inv_miles">Miles:</label>
      <input class="form-field" id="inv_miles" required minlength="2" name="inv_miles" placeholder="Miles" type="number" value="<%= locals.inv_miles  %>" /><br>
      <label for="inv_color">Color:</label>
      <input class="form-field" id="inv_color" required name="inv_color" size="20" placeholder="Color" type="text" value="<%= locals.inv_color  %>" /><br>
      <button class="form-button" type="submit">Add Vehicle</button>
    </form>
  </section>
</div>