<!-- Content Heading -->
<% if (title) { %>
<h1><%= title %></h1>
<% } else {
      res.redirect('/')
    } %>

<!-- Message -->
<%- messages() %>

<div class="form-body">
  <section class="form-container">
    <form class="form" action="/inv/add-inventory" method="post">
      <label for="classification"><b>Classification:</b></label>
      <select class="form-field" id="class" name="classification_name">
        <option value="1">Custom</option>
        <option value="2">Sport</option>
        <option value="3">SUV</option>
        <option value="4">Truck</option>
        <option value="5">Sedan</option>
      </select>

      <label for="inv_make"><b>Make:</b></label>
      <input class="form-field" type="text" placeholder="Min of 3 characters" name="inv_make" required>

      <label for="inv_model"><b>Model:</b></label>
      <input class="form-field" type="text" placeholder="Min of 3 characters" name="inv_model" required>

      <label for="inv_year"><b>Year:</b></label>
      <input class="form-field" type="text" placeholder="4-digit year" name="inv_year" required>

      <label for="inv_description"><b>Description:</b></label>
      <input class="form-field" type="text" name="inv_description" required>

      <label for="inv_image"><b>Image Path:</b></label>
      <input class="form-field" type="text" value="/images/vehicles/no-image.png" name="inv_image" required>

      <label for="inv_thumbnail"><b>Thumbnail Path:</b></label>
      <input class="form-field" type="text" value="/images/vehicles/no-image-tn.png" name="inv_thumbnail" required>

      <label for="inv_price"><b>Price:</b></label>
      <input class="form-field" type="text" placeholder="Decimal or integer" name="inv_price" required>

      <label for="inv_miles"><b>Miles:</b></label>
      <input class="form-field" type="text" placeholder="Digits only" name="inv_miles" required>

      <label for="inv_color"><b>Color:</b></label>
      <input class="form-field" type="text" name="inv_color" required>

      <button class="form-button" type="submit">Add Vehicle</button>
    </form>
  </section>
</div>